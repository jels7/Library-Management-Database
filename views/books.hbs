<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books - Community Library Management System</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            background: #b9b9b7;
        }

        .genre-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .genre-list li {
            list-style: none;
        }
    </style>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>

<body>
    <header>
        <h1>Books</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/books">Books</a></li>
                <li><a href="/patrons">Patrons</a></li>
                <li><a href="/donations">Donations</a></li>
                <li><a href="/genres">Genres</a></li>
                <li><a href="/borrowed_books">Borrowed Books</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <!-- Removed Genre List Section -->
        <section>
            <h2>Books List</h2>
            <table class="table" id="books-table">
                <thead>
                    <tr>
                        <th>Book ID</th>
                        <th>Title</th>
                        <th>Genre ID</th>
                        <th>Copies Available</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr data-value="{{this.bookID}}">
                        <td>{{this.bookID}}</td>
                        <td>{{this.bookTitle}}</td>
                        <td>{{this.genreID}}</td>
                        <td>{{this.copiesAvailable}}</td>
                        <td>
                            <button onclick="editBook({{this.bookID}})">Edit</button>
                            <button onclick="deleteBook({{this.bookID}})">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section>
            <h2>Add Book</h2>
            <form id="add-book-form-ajax">
                <label for="input-bookTitle">Title:</label>
                <input type="text" id="input-bookTitle" name="bookTitle" required>

                <label for="input-genreID">Genre:</label>
                <select id="input-genreID" name="genreID" required>
                    <!-- Options will be populated dynamically -->
                </select>

                <label for="input-copiesAvailable">Copies Available:</label>
                <input type="number" id="input-copiesAvailable" name="copiesAvailable" required>

                <button type="submit">Submit</button>
            </form>
        </section>
        <section>
            <h2>Update Book</h2>
            <form id="update-book-form-ajax">
                <label for="select-book">Select Book:</label>
                <select name="select-book" id="select-book">
                    <option value="">Select a Book</option>
                    {{#each data}}
                    <option value="{{this.bookID}}">{{this.bookTitle}}</option>
                    {{/each}}
                </select>

                <label for="update-bookTitle">New Title:</label>
                <input type="text" id="update-bookTitle" name="update-bookTitle" required>

                <label for="update-genreID">New Genre:</label>
                <select id="update-genreID" name="update-genreID" required>
                    <!-- Options will be populated dynamically -->
                </select>

                <label for="update-copiesAvailable">New Copies Available:</label>
                <input type="number" id="update-copiesAvailable" name="update-copiesAvailable" required>

                <button type="submit">Update</button>
            </form>
        </section>
    </main>
    <script src="./js/books.js"></script>
    <script src="./js/delete_book.js"></script>
    <script src="./js/update_book.js"></script>
</body>

</html>
