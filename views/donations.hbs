<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donations - Community Library Management System</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            background: #b9b9b7;
        }

    </style>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>

<body>
    <header>
        <h1>Donations</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/books">Books</a></li>
                <li><a href="/patrons">Patrons</a></li>
                <li><a href="/donations">Donations</a></li>
                <li><a href="/genres">Genres</a></li>
                <li><a href="/borrowed_books">Borrowed Books</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h2>Donations List</h2>
            <table class="table" id="donations-table">
                <thead>
                    <tr>
                        <th>Donation ID</th>
                        <th>Donor Name</th>
                        <th>Book ID</th>
                        <th>Donation Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr data-value="{{this.donationID}}">
                        <td>{{this.donationID}}</td>
                        <td>{{this.donorName}}</td>
                        <td>{{this.bookID}}</td>
                        <td>{{this.donationDate}}</td>
                        <td>
                            <button onclick="editDonation({{this.donationID}})">Edit</button>
                            <button onclick="deleteDonation({{this.donationID}})">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section>
            <h2>Add Donation</h2>
            <form id="add-donation-form-ajax">
                <label for="input-donorName">Donor Name:</label>
                <input type="text" id="input-donorName" name="donorName" required>

                <label for="input-bookID">Book ID:</label>
                <input type="number" id="input-bookID" name="bookID" required>

                <label for="input-donationDate">Donation Date:</label>
                <input type="date" id="input-donationDate" name="donationDate" required>

                <button type="submit">Submit</button>
            </form>
        </section>
        <section>
            <h2>Update Donation</h2>
            <form id="update-donation-form-ajax">
                <label for="select-donation">Select Donation:</label>
                <select name="select-donation" id="select-donation">
                    <option value="">Select a Donation</option>
                    {{#each data}}
                    <option value="{{this.donationID}}">{{this.donorName}}</option>
                    {{/each}}
                </select>

                <label for="update-donorName">New Donor Name:</label>
                <input type="text" id="update-donorName" name="donorName">

                <label for="update-bookID">New Book ID:</label>
                <input type="number" id="update-bookID" name="bookID">

                <label for="update-donationDate">New Donation Date:</label>
                <input type="date" id="update-donationDate" name="donationDate">

                <button type="submit">Update</button>
            </form>
        </section>
    </main>
    <script src="./js/donations.js"></script>
    <script src="./js/delete_donation.js"></script>
    <script src="./js/update_donation.js"></script>
</body>

</html>